# Copy this file to .env and fill values for local development

# MongoDB connection string (local or Atlas)
# Examples:
# - Local: mongodb://localhost:27017/genz_social
# - With auth: mongodb://user:pass@localhost:27017/genz_social?authSource=admin
# - Atlas: mongodb+srv://<user>:<pass>@cluster0.mongodb.net/genz_social?retryWrites=true&w=majority
MONGODB_URI=mongodb://127.0.0.1:27017/genz_social

# JWT secret (set a long random string in production)
JWT_SECRET=replace_this_with_a_secure_random_string

# Server port
PORT=3000

# Environment
NODE_ENV=development

# Feature toggles
ENABLE_SOCKET_IO=true
ENABLE_SEARCH=true
ENABLE_TRENDING=true
